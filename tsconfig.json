{
  "compilerOptions": {
    "outDir": "./lib",
    "target": "es2019",
    "module": "commonjs",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "declaration": true,
    "sourceMap": true,
    "jsx": "react",
    "typeRoots": ["node_modules/@types"],
    "skipLibCheck": true
  },
  "include": ["./src/**/*.tsx", "./src/**/*.ts"],
  "exclude": ["node_modules"]
}
